pipeline {
    agent any  

    tools {
        maven 'Maven3'  // Use the configured Maven tool in Jenkins
    }

    environment {
        JAVA_HOME = tool 'JDK11'  // Ensure JDK is configured in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Antonykavin-007/your-maven-project.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying application..."
                // Add deployment steps here if needed
            }
        }
    }
}

