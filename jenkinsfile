pipeline {
    agent any  // Runs on any available agent

    tools {
        maven 'maven'  // Ensure 'maven' is configured in Jenkins Global Tool Configuration
        jdk 'JDK11'  // Ensure JDK is installed and configured
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Antonykavin-007/first.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'  // Build the project
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'  // Run unit tests
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying the application..."  
                // Add deployment steps (e.g., SCP, Docker, Kubernetes, etc.)
            }
        }
    }

    post {
        success {
            echo 'Build and Deployment Successful!'
        }
        failure {
            echo 'Build Failed! Check logs for details.'
        }
    }
}
